<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: producto.name}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"><%= producto.name %></h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img id="imgProdCarrito" src="/images/products/<%= producto.image %>" alt="<%= producto.image %>" class="product-detail-img">
					<p class="product-detail-description">
						<%= producto.description %>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 id="idProd" class="product-detail-title"><%= producto.id %></h2>
						<h2 id="nomProd" class="product-detail-title"><%= producto.name %></h2>
						
							<p class="product-detail-price small">
								<span>$ <%= producto.price%></span>
								/
								<b>% <%= producto.discount %> OFF</b>
							</p>
							<p id="priceProd" class="product-detail-price">
								$ <%= producto.price - ((producto.discount/100)*producto.price) %>
							</p>
							<p class="product-detail-price">
								$ <%= producto.price%>
							</p>

						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pag√° en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<button class="buy-now-button">AGREGAR AL CARRITO</button>
						<hr>

						<a href="/products/edit/<%= producto.id%>" class="action-button edit">EDITAR PRODUCTO</a>
						<form action="/products/delete/<%= producto.id%>?_method=delete" method="POST" style="display: inline-flex">
							<button type="submit" class="action-button delete">ELIMINAR</button>
						</form>
					</article>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
	<%- include("./partials/scripts") %>
</body>	
</html>